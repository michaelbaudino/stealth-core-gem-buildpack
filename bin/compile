#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
    :
  done
fi

if [ -z "BUNDLE_GEM__FURY__IO" ]; then
  echo "BUNDLE_GEM__FURY__IO has not been set"
  echo "You can set it with:"
  echo 'heroku config:set BUNDLE_GEM__FURY__IO="YoUr_PeRsOnAl_GeMfUrY_ToKeN"'
  exit 0
fi

cd $build_dir && gem install core --vendor --ignore-dependencies --no-document --source https://${BUNDLE_GEM__FURY__IO}@gem.fury.io/app28023208_heroku_com/
